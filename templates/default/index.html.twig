{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name}}!{% endblock %}

{% set users = [{name: 'John'}, {name: 'Susan'}, {name: 'Robert'}] %}

{% set string = "some string \n from \n database" %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name|upper }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'D:/OpenServer/domains/my_project_name/src/Controller/DefaultController.php'|file_link(0) }}">src/Controller/DefaultController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'D:/OpenServer/domains/my_project_name/templates/default/index.html.twig'|file_link(0) }}">templates/default/index.html.twig</a></code></li>
    </ul>

    {{ path('home') }} <br>
    {{ url('home') }} <br>
    {{ asset('images/image.jpg') }} <br>
    {{ absolute_url('images/image.jpg') }} <br>

    <img src="{{ absolute_url(asset('images/image.jpg')) }}" alt="Symfony 4">
</div>

{% endblock %}

{% block javascripts %}
    <script>
        var route = "{{ string|escape('js') }}";
        alert(route);
    </script>

{% endblock %}